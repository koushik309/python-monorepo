{
  "bootstrap-sha": "cf3210b",
  "separate-pull-requests": false,
  "monorepo-tags": true,
  "plugins": ["node-workspace"],
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "chore", "section": "Maintenance", "hidden": false}
  ],
  "packages": {
    "": {
      "release-type": "simple",
      "component": "python-monorepo",
      "bump-minor-pre-major": true,
      "changelog-path": "CHANGELOG.md",
      "include-v-in-tag": true
    },
    "source/code/RepoB": {
      "release-type": "toml",
      "component": "RepoB",
      "version-file": "source/code/RepoB/pyproject.toml",
      "changelog-path": "source/code/RepoB/CHANGELOG.md",
      "extra-files": ["source/code/RepoB/README.md"]
    },
    "source/code/service-b": {
      "release-type": "toml",
      "component": "service-b",
      "version-file": "source/code/service-b/pyproject.toml",
      "changelog-path": "source/code/service-b/CHANGELOG.md",
      "extra-files": ["source/code/service-b/README.md"]
    }
  }
}
