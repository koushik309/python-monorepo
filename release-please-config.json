{
  "bump-minor-pre-major": true,
  "packages": {
    "src/code/package1": {
      "release-type": "python",
      "component": "package1",
      "package-name": "package1",
      "include-component-in-tag": false,
      "primary": true,
      "path": "src/code/package1"
    },
    "src/code/package2": {
      "release-type": "python",
      "component": "package2",
      "package-name": "package2",
      "include-component-in-tag": false,
      "path": "src/code/package2"
    },
    ".": {
      "release-type": "simple",
      "component": "monorepo-root",
      "package-name": "python-monorepo",
      "include-component-in-tag": false
    }
  },
  "plugins": ["node-workspace"],
  "always-link-local": true,
  "changelog-host": "https://github.com/koushik309/python-monorepo",
  "separate-pull-requests": false,
  "monorepo-tags": true,
  "bump-each-commit": true,
  "changelog-path": "CHANGELOG.md"
}